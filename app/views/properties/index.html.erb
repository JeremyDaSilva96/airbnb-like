<div class="properties-grid">
  <% @properties.each do |property| %>
    <%= link_to property_path(property), class: "property-card" do %>
      <div class="property-card__image-container">
        <!-- Bootstrap Carousel -->
        <div id="carousel-<%= property.id %>" class="carousel slide property-card__image-wrapper"
             data-controller="bootstrap"
             data-bs-ride="false">
          <div class="carousel-inner">
            <% if property.photos.attached? %>
              <% property.photos.each_with_index do |photo, index| %>
                <div class="carousel-item property-card__image <%= 'active' if index == 0 %>">
                  <%= cl_image_tag photo.key %>
                </div>
              <% end %>
            <% else %>
              <div class="carousel-item property-card__image active">
                <%= image_tag "https://images.unsplash.com/photo-1502672260266-1c1ef2d93688" %>
              </div>
            <% end %>
          </div>
          <!-- Coup de coeur tag -->
          <% if property.travelers_favorite? %>
            <div class="property-card__tag">
              <span>Coup de cœur voyageurs</span>
            </div>
          <% end %>
          <!-- Favorite Button -->
          <button class="property-card__favorite" onclick="event.preventDefault();">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="rgba(0, 0, 0, 0.5)" stroke="white">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
          </button>
          <!-- Navigation Arrows -->
          <button class="carousel-control-prev property-card__nav property-card__nav--prev"
                  type="button"
                  data-bs-target="#carousel-<%= property.id %>"
                  data-bs-slide="prev"
                  onclick="event.preventDefault();">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next property-card__nav property-card__nav--next"
                  type="button"
                  data-bs-target="#carousel-<%= property.id %>"
                  data-bs-slide="next"
                  onclick="event.preventDefault();">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <!-- Navigation Indicators -->
          <div class="carousel-indicators property-card__dots">
            <% if property.photos.attached? %>
              <% property.photos.each_with_index do |_, index| %>
                <button type="button"
                        data-bs-target="#carousel-<%= property.id %>"
                        data-bs-slide-to="<%= index %>"
                        class="property-card__dot <%= 'active' if index == 0 %>"
                        onclick="event.preventDefault();"
                        aria-current="<%= 'true' if index == 0 %>"
                        aria-label="Slide <%= index + 1 %>"></button>
              <% end %>
            <% else %>
              <button type="button"
                      data-bs-target="#carousel-<%= property.id %>"
                      data-bs-slide-to="0"
                      class="property-card__dot active"
                      onclick="event.preventDefault();"
                      aria-current="true"
                      aria-label="Slide 1"></button>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Property Details -->
      <div class="property-card__content">
        <div class="property-card__header">
          <h3><%= property.city %>, <%= property.country %></h3>
          <div class="property-card__rating">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" />
            </svg>
            <span>4.95</span>
          </div>
        </div>
        <p class="property-card__type"><%= property.property_type %></p>
        <p class="property-card__dates">8-13 janv.</p>
        <p class="property-card__price">
          <span><%= number_to_currency(property.price_per_night, unit: "€", precision: 0) %></span> par nuit
        </p>
      </div>
    <% end %>
  <% end %>
</div>
