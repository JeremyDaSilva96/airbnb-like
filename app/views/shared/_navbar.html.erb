<header class="header">
  <div class="header-top">
    <div class="header-left">
      <%= link_to root_path, class: "logo-container" do %>
        <%= image_tag "airbnb_logo.png", class: "logo", alt: "Airbnb Logo" %>
        <span class="logo-text">airbnb</span>
      <% end %>
    </div>
    <div class="header-center">
      <nav class="nav-links">
        <%= link_to "Logements", "#", class: "nav-link" %>
        <%= link_to "Expériences", "#", class: "nav-link" %>
      </nav>
    </div>
    <div class="header-right">
      <%= link_to "Mettre mon logement sur Airbnb", "#", class: "host-link" %>
      <button type="button" class="globe-btn">
        <%= image_tag 'icône_monde.svg', class: 'globe-icon' %>
      </button>
      <button type="button" class="menu-button">
        <i class="fa-solid fa-bars"></i>
        <i class="fa-solid fa-circle-user"></i>
      </button>
    </div>
  </div>
  <div class="search-bar">
    <form action="#" class="search-form">
      <div class="search-input">
        <label>Destination</label>
        <input type="text" placeholder="Rechercher une destination">
      </div>
      <div class="search-divider"></div>
      <div class="search-input">
        <label>Arrivée</label>
        <input type="text" placeholder="Quand ?">
      </div>
      <div class="search-divider"></div>
      <div class="search-input">
        <label>Départ</label>
        <input type="text" placeholder="Quand ?">
      </div>
      <div class="search-divider"></div>
      <div class="search-input">
        <label>Voyageurs</label>
        <input type="text" placeholder="Ajouter des voyageurs">
      </div>
      <button type="submit" class="search-button">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
  </div>
</header>
